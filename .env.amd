GPU_TYPE=amd
DOCKER_RUNTIME=runc

# AMD-specific settings
AMD_VISIBLE_DEVICES=all
ROCm_VISIBLE_DEVICES=all

# Device mappings for AMD
GPU_DEVICES=["/dev/kfd:/dev/kfd", "/dev/dri:/dev/dri"]
