# AMD GPU Configuration
GPU_TYPE=amd

# No special runtime needed (device passthrough instead)
DOCKER_RUNTIME=

# AMD-specific settings
AMD_VISIBLE_DEVICES=all
ROCm_VISIBLE_DEVICES=all

# Note: AMD ROCm may require seccomp=unconfined
# If needed, create a docker-compose.override.yml with:
#   services:
#     antigravity:
#       security_opt:
#         - seccomp=unconfined
#       devices:
#         - /dev/kfd:/dev/kfd
#         - /dev/dri:/dev/dri

# VNC Configuration
VNC_PASSWORD=antigravity
VNC_PORT=5901
NOVNC_PORT=6080

# Display Configuration
DISPLAY_WIDTH=1920
DISPLAY_HEIGHT=1080

# Application Settings
AUTOSTART_ANTIGRAVITY=true
IDLE_TIMEOUT=60

