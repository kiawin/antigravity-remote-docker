VNC_PORT=5901
NOVNC_PORT=6080

# Display Configuration
DISPLAY_WIDTH=1920
DISPLAY_HEIGHT=1080

# Application Settings
AUTOSTART_ANTIGRAVITY=true
IDLE_TIMEOUT=60
